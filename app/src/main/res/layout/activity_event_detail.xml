<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3D0005"
    android:textAlignment="center"
    tools:context=".EventDetailActivity">


        <!-- ✅ Ajout de event_date -->

    <ImageView
        android:id="@+id/imageView19"
        android:layout_width="74dp"
        android:layout_height="65dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="22dp"
        app:layout_constraintBottom_toTopOf="@+id/view8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <View
        android:id="@+id/view8"
        android:layout_width="304dp"
        android:layout_height="521dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="119dp"
        android:background="#FBFBFB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView19" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="458dp"
        android:fontFamily="@font/hind_madurai_light"
        android:text="20/15/2020"
        android:textColor="#0D0D0D"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/view8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view8" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="117dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="117dp"
        android:layout_marginBottom="417dp"
        android:text="20:30"
        android:textAlignment="center"
        android:textColor="#040404"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/view8"
        app:layout_constraintEnd_toEndOf="@+id/view8"
        app:layout_constraintStart_toStartOf="@+id/view8"
        app:layout_constraintTop_toTopOf="@+id/view8" />

    <Button
        android:id="@+id/btnReserve"
        android:layout_width="248dp"
        android:layout_height="61dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="424dp"
        android:layout_marginBottom="36dp"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="@font/holtwood_one_sc"
        android:text="   Réserver Maintenant"
        android:textColor="#121212"
        android:textSize="12sp"
        android:textStyle="bold"
        app:cornerRadius="45dp"
        app:layout_constraintBottom_toBottomOf="@+id/view8"
        app:layout_constraintEnd_toEndOf="@+id/view8"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/view8"
        app:layout_constraintTop_toTopOf="@+id/view8"
        app:layout_constraintVertical_bias="1.0"
        app:strokeColor="#040404"
        app:strokeWidth="1dp" />

    <View
        android:id="@+id/view9"
        android:layout_width="277dp"
        android:layout_height="128dp"
        android:layout_marginTop="140dp"
        android:background="#E7E5E5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view8" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="104dp"
        android:layout_height="112dp"
        android:layout_marginStart="156dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="9dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/view9"
        app:layout_constraintEnd_toEndOf="@+id/view9"
        app:layout_constraintStart_toStartOf="@+id/view9"
        app:layout_constraintTop_toTopOf="@+id/view9" />

    <TextView
        android:id="@+id/title"
        android:layout_width="124dp"
        android:layout_height="52dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="134dp"
        android:layout_marginBottom="74dp"
        android:fontFamily="@font/holtwood_one_sc"
        android:text="Titre "
        android:textAlignment="center"
        android:textColor="#090909"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/view9"
        app:layout_constraintEnd_toEndOf="@+id/view9"
        app:layout_constraintStart_toStartOf="@+id/view9"
        app:layout_constraintTop_toTopOf="@+id/view9" />

    <TextView
        android:id="@+id/duration"
        android:layout_width="133dp"
        android:layout_height="28dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="67dp"
        android:layout_marginEnd="134dp"
        android:layout_marginBottom="35dp"
        android:background="#FFFFFF"
        android:text="Durée"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/view9"
        app:layout_constraintEnd_toEndOf="@+id/view9"
        app:layout_constraintStart_toStartOf="@+id/view9"
        app:layout_constraintTop_toTopOf="@+id/view9" />

    <View
        android:id="@+id/view10"
        android:layout_width="279dp"
        android:layout_height="118dp"
        android:layout_marginTop="287dp"
        android:layout_marginBottom="116dp"
        android:background="#E7E5E5"
        app:layout_constraintBottom_toBottomOf="@+id/view8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view8" />

    <TextView
        android:id="@+id/location"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="71dp"
        android:fontFamily="@font/holtwood_one_sc"
        android:text="Lieu"
        android:textAlignment="center"
        android:textColor="#050505"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/view10"
        app:layout_constraintEnd_toEndOf="@+id/view10"
        app:layout_constraintStart_toStartOf="@+id/view10"
        app:layout_constraintTop_toTopOf="@+id/view10" />

    <ImageView
        android:id="@+id/imageView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="73dp"
        android:layout_marginEnd="221dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/view10"
        app:layout_constraintEnd_toEndOf="@+id/view10"
        app:layout_constraintStart_toStartOf="@+id/view10"
        app:layout_constraintTop_toTopOf="@+id/view10"
        app:srcCompat="@drawable/img_13" />

    <ImageView
        android:id="@+id/imageView21"
        android:layout_width="29dp"
        android:layout_height="31dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="212dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnReserve"
        app:layout_constraintEnd_toEndOf="@+id/btnReserve"
        app:layout_constraintStart_toStartOf="@+id/btnReserve"
        app:layout_constraintTop_toTopOf="@+id/btnReserve"
        app:srcCompat="@drawable/img" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="138dp"
        android:layout_height="25dp"
        android:layout_marginStart="69dp"
        android:layout_marginTop="78dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="15dp"
        android:text="Acessible aux PMR "
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/view10"
        app:layout_constraintEnd_toEndOf="@+id/view10"
        app:layout_constraintStart_toStartOf="@+id/view10"
        app:layout_constraintTop_toTopOf="@+id/view10" />


</androidx.constraintlayout.widget.ConstraintLayout>